{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5", // TSはECMAScript 5に変換
    "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "jsx": "react", // JSXの書式を有効に設定
    "allowSyntheticDefaultImports": true, // import Vue from 'vue' の書き方を許容する
    "lib": [
      "DOM",
      "es2020"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true, // デコレーターを有効に設定
  }
}